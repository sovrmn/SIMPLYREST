<!DOCTYPE html>
<html>
<%= favicon_link_tag asset_path('logo.png'), :rel => 'icon', :type =>  'image/png' %>
  <head>
    <title>SIMPLYREST</title>
    <link href="https://fonts.googleapis.com/css?family=Karla|Montserrat&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%#= favicon_link_tag 'logo.png'%>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body class="not-scrollable">

    <%= render 'shared/flashes' %>

    <%= render 'shared/sidebar' if current_user %>
    <div class="container_with_sidebar">
      <%= yield %>
    </div>

  </body>

</html>
